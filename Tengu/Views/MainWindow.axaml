<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Tengu.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:skp="clr-namespace:Avalonia.Controls.Skia;assembly=Avalonia.Controls.Skia"
		xmlns:ui="using:FluentAvalonia.UI.Controls"
		xmlns:ic="using:FluentIcons.Avalonia"
        x:Class="Tengu.Views.MainWindow"
        Title="Tengu">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid RowDefinitions="Auto, *">
		
		<Grid Background="Transparent"
              Name="TitleBarHost"
              ColumnDefinitions="Auto,*">

			<StackPanel Orientation="Horizontal"
						Spacing="10"
						Margin="10,0">
			<!-- Adding an Image control to add an Icon 
			<Image Margin="12 4"
                   IsHitTestVisible="False"
                   Source="{Binding ...}"
                   Width="18" Height="18"
                   Name="WindowIcon" />-->
				
			<!-- Add a TextBlock for the Window title text -->
				<Menu>
					<MenuItem Header="Tengu">
						<MenuItem Header="123" />
						<MenuItem Header="Item 2" Icon="Paste" />
						<Separator />
						<MenuItem Header="123" />

					</MenuItem>
					<MenuItem Header="Kitsu">
						
					</MenuItem>
					<MenuItem Header="Settings">
						<MenuItem.Icon>
						</MenuItem.Icon>
						
						<MenuItem Header="Customization" />
					</MenuItem>
					<MenuItem Header="Downloads">
						
					</MenuItem>
				</Menu>
			</StackPanel>
		</Grid>

		<Panel>
			<ui:Frame Name="FrameView"/>
		</Panel>
	</Grid>

</Window>
